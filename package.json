{
  "name": "rollup-starter-lib",
  "version": "1.0.0",
  "main": "dist/rollup-starter-lib.cjs.js",
  "module": "dist/rollup-starter-lib.esm.js",
  "browser": "dist/rollup-starter-lib.umd.js",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier-eslint-cli": "^4.7.1",
    "rollup": "^1.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "node test/test.js",
    "pretest": "npm run build"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && git add dist"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,css,json,md}": [
        "prettier-eslint --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.js"
    ]
  }
}
